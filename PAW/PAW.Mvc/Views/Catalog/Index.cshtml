@model IEnumerable<PAW.Models.Catalog>

@{
    ViewData["Title"] = "Index";
}

<h1>Catalogs Page</h1>

<hr />


<table class="table table-condensed table-bordered table-dark table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>SKU</th>
            <th>Created Date</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td><input type="text" class="form-control" value="@c.Name" /></td>
                <td><input type="text" class="form-control" value="@c.Description" /></td>
                <td><input type="text" class="form-control" value="@c.Sku" /></td>
                <td><input type="text" class="form-control" value="@c.CreatedDate" /></td>
                <td><input type="text" class="form-control" value="@c.Rating" /></td>
                <td>
                    <button onclick="save()"class="btn btn-primary">Save</button>
                    <button onclick="delete(@c.Identifier)" class="btn btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
